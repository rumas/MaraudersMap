<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_brunel_buyn_sell"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#002646"
    tools:context="com.brunel.team28.maraudersmap.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:id="@+id/editText26"
        android:hint="Password"
        android:background="#ffffff"
        android:layout_alignTop="@+id/loginUsername"
        android:layout_alignLeft="@+id/loginUsername"
        android:layout_alignStart="@+id/loginUsername"
        android:layout_alignEnd="@+id/loginUsername" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="#ffffff"
        android:id="@+id/loginUsername"
        android:hint="Username"
        android:layout_marginRight="40dp"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Create"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/button6"
        android:layout_marginBottom="97dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Create An Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />


</RelativeLayout>
