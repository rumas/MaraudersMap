<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_brunel_buyn_sell"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#002646"
    tools:context="com.brunel.team28.maraudersmap.MainActivity">

    <TextView
        android:text="Update Your Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:textColor="#ffffff"
        android:id="@+id/UpdateStatusBanner"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="#ffffff"
        android:id="@+id/editText_newUserStatus"
        android:layout_marginRight="40dp"
        android:hint="Your new status here"
        android:layout_above="@+id/btn_addStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

    <Button
        android:text="Add"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/btn_addStatus"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
