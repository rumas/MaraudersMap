<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_brunel_buyn_sell"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#002646"
    tools:context="com.brunel.team28.maraudersmap.MainActivity">

    <TextView
        android:text="Add Contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:textColor="#ffffff"
        android:id="@+id/textView2"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="#ffffff"
        android:id="@+id/friendUsername"
        android:hint="@string/enter_friend_s_username"
        android:layout_marginRight="40dp"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Add"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/addFriendButton"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/friendUsername"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
